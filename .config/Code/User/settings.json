{
    "vim.leader": "<Space>",
    "vim.hlsearch": false,
    "vim.useSystemClipboard": true,
    "vim.insertModeKeyBindingsNonRecursive": [ 
		{ "before": ["j", "k"], "after": ["<Esc>"] } 
	],
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["<leader>", "v"], "commands": [":vsplit"] },
        { "before": ["<leader>", "s"], "commands": [":split"] },
        { "before": ["<leader>", "w"], "commands": [":w"] },
        { "before": ["<leader>", "q"], "commands": [":q"] },
        { "before": ["<C-l>"], "after": ["<C-w>", "l"] },
        { "before": ["<C-h>"], "after": ["<C-w>", "h"] },
        { "before": ["<C-j>"], "after": ["<C-w>", "j"] },
        { "before": ["<C-k>"], "after": ["<C-w>", "k"] },
        { "before": ["<Tab>"], "commands": [":tabnext"] },
        { "before": ["<S-Tab>"], "commands": [":tabprev"] },
        { "before": ["Q"], "after": ["@", "q", "j"] }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
        { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
        { "before": ["<leader>", "c"], "commands": ["editor.action.commentLine"] },
		{ "before": ["<leader>", "j", "k"], "after": ["<Esc>"] },
        { "before": ["<leader>", "i"], "after": ["g", "<C-a>"] },
        { "before": ["<leader>", "d"], "after": ["g", "<C-x>"] },
    ],
    "workbench.colorTheme": "Tokyo Night",
    "editor.fontFamily": "'JetBrainsMono NF','Droid Sans Mono', 'monospace', monospace",
    "editor.tabSize": 2,
    "window.titleBarStyle": "custom",
    "workbench.activityBar.location": "top",
    "window.customTitleBarVisibility": "auto",
    "window.customMenuBarAltFocus": false,
    "editor.bracketPairColorization.enabled": false,
    "editor.lineNumbers": "relative",
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "workbench.startupEditor": "none",
    "window.menuBarVisibility": "toggle",
    "window.enableMenuBarMnemonics": false,
    "extensions.ignoreRecommendations": true
}
